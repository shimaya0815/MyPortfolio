 <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <%= link_to(user_path(@user)) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: 'default-image.jpg' %>
        <% end %>
        <table class='table'>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <div class='row'>
          <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(@user) %>">
            <i class="fas fa-user-cog"></i>
          </a>
        </div>

        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
              <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
          </div>
        <% end %>

        <%= form_with url: books_path, method: :post, local:true do |f| %>
        <h2 class="mt-3">New book</h2>
          <div class="form-group">
            <label for="book_title">Title</label>
            <input class="form-control" type="text" name="book[title]" id="book_title" />
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <textarea class="form-control" name="book[body]" id="book_body"></textarea>
          </div>

          <div class="form-group">
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />
          </div>
        <% end %>
      </div>