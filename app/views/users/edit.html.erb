<main>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

    <p id="notice">
    <% if flash[:notice] %>
      <p class="alert alert-success"><%= flash[:notice] %></p>
    <% elsif flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
        <% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
    <% end %>
    </p>
      <%= form_with model:@user, local:true do |f| %>

        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:@user.name, class: "form-control name" %>
        </div>

        <div class="form-group">
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
          <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "form-control-file user_image" %>
        </div>

        <div class="form-group">
          <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction, autofocus: true, id: "user_introduction",class: "form-control introduction" %>
          </div>

        <div class="form-group">
          <%= f.submit "Update User",class: "btn btn-secondary" %>
        </div>

      <% end %>

    </div>
  </div>
</main>