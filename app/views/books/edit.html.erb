<main>
  <p id="notice">
  </p>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
          </ul>
        </div>
        <% end %>

      <%= form_with(model: @book, local: true) do |form| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= form.text_field :title, class: 'form-control book_title', value: @book.title, name: 'book[title]', id: 'book_title' %>
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= form.text_area :body, class: 'form-control book_body', name: 'book[body]', id: 'book_body' do %><%= @book.body %><% end %>
      </div>

      <div class="form-group">
        <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book" />
      </div>
      <% end %>
      <%= link_to 'Show', book_path(@book) %> |
  		<a class="back" href="/books">Back</a>
    </div>
  </div>
